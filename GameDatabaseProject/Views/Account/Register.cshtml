@model GameDatabaseProject.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}
<div class="standard-height">


	<div class="register-packet">

		<div class="col-md-5">
			@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
			{
				@Html.AntiForgeryToken()
				<h4>Vytvořit nový <span class="bold">Pushstart</span> účet.</h4>
				<hr />
				@Html.ValidationSummary("", new { @class = "text-danger" })
				<div class="form-group">
					@Html.LabelFor(m => m.Email, new { @class = "col-md-3 control-label" })
					<div class="col-md-9">
						@Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
					</div>
				</div>

				@Html.ValidationSummary("", new { @class = "text-danger" })
				<div class="form-group">
					@Html.LabelFor(m => m.NickName, "Přezdívka", new { @class = "col-md-3 control-label" })
					<div class="col-md-9">
						@Html.TextBoxFor(m => m.NickName, new { @class = "form-control" })
					</div>
				</div>

				<div class="form-group">
					@Html.LabelFor(m => m.Password, "Heslo", new { @class = "col-md-3 control-label" })
					<div class="col-md-9">
						@Html.PasswordFor(m => m.Password, new { @class = "form-control" })
					</div>
				</div>
				<div class="form-group">
					@Html.LabelFor(m => m.ConfirmPassword, "Heslo znovu", new { @class = "col-md-3 control-label" })
					<div class="col-md-9">
						@Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
					</div>
				</div>
				<div class="form-group">
					<div class="col-md-offset-3 col-md-9">
						<input type="submit" class="btn btn-default" value="Registrovat" />
					</div>
				</div>


			}
		</div>
		<div class="col-md-7">
			<div class="registration-description">
				<p>Vítejte na webu <span class="bold">Pushstart.cz</span>!</p>
				<p>Web Pushstart.cz je domovem hráčů a recenzentů her Playstation 4 a Xbox One.</p>
				<p>Přidejte se ke komunitě místních soudců a sdílejte své herní zážiky s ostatními.</p>
			</div>
		</div>


		</div>
</div>


	@section Scripts {
		@Scripts.Render("~/bundles/jqueryval")
	}
