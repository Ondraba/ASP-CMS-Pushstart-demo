@model GameDatabaseProject.Reviews

@{
	ViewBag.Title = "DeleteReview";
}

<div class="standard-height">
	<div class="delete-review-packet">

		<h2>Administrační rozhraní <span class="bold">Pushstart.cz</span></h2>

		<div>
			<h4><span class="glyphicon glyphicon-trash"></span>  Přehled uživatelských recenzí</h4>
			<div>

				<hr />
				<dl class="dl-horizontal">
					<dt>
						@Html.DisplayName("Obsah")
					</dt>

					<dd>
						@Html.DisplayFor(model => model.Content)
					</dd>

					<dt>
						@Html.DisplayName("Datum")
					</dt>

					<dd>
						@Html.DisplayFor(model => model.Created_At)
					</dd>

					<dt>
						@Html.DisplayName("Hodnocení")
					</dt>

					<dd>
						@Html.DisplayFor(model => model.UserRank)
					</dd>

					<dt>
						@Html.DisplayName("Uživatel")
					</dt>

					<dd>
						<span class="bold">
							@Html.DisplayFor(model => model.User_Name)
						</span>
					</dd>

					<dt>
						@Html.DisplayName("Body")
					</dt>

					<dd>
						@Html.DisplayFor(model => model.ReviewPoints)
					</dd>

					<dt>
						@Html.DisplayName("Hra")
					</dt>

					<dd>
						@Html.DisplayFor(model => model.Games.Name)
					</dd>

					<dt>
						@Html.DisplayName("Email")
				</dt>

				<dd>
					@Html.DisplayFor(model => model.AspNetUsers.Email)
				</dd>

			</dl>

			@using (Html.BeginForm())
			{
				@Html.AntiForgeryToken()

				<div class="form-actions no-color">
					@Html.ActionLink("Zpět na Admin", "Index") |
					<input type="submit" value="smazat recenzi" class="btn btn-default" />

				</div>
			}
		</div>
	</div>
</div>
</div>

