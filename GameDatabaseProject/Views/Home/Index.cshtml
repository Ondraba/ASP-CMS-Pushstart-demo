@model IEnumerable<GameDatabaseProject.Games>

@{
	ViewBag.Title = "Index";

}
<div class="standard-height">
	<div class="admin-index-packet">

		<h2><span class="glyphicon glyphicon-tasks"></span>Administrační rozhraní <span class="bold">Pushstart.cz</span> </h2>

		<p class="admin-index-menu">
			
			<span class="admin-index-menu-item">
				<span class="glyphicon glyphicon-plus"></span>
				@Html.ActionLink("Přidat hru", "Create")
			</span>
	

			<span class="admin-index-menu-item">
				<span class="glyphicon glyphicon-plus"></span>
				@Html.ActionLink("Přidat distributora", "CreateDistributor")
			</span>


					<span class="admin-index-menu-item">
						<span class="glyphicon glyphicon-plus"></span>
						@Html.ActionLink("Přidat výrobce", "CreateCreator")
					</span>


			<span class="admin-index-menu-item">
				<span class="glyphicon glyphicon-user"></span>
				@Html.ActionLink("Zobrazit recenze", "GetAllReviews")
			</span>


</p>
		<table class="table">
			<tr>
				<th>
					@Html.DisplayName("Název")
				</th>
				<th>
					@Html.DisplayName("Obrázek")
				</th>
				<th>
					@Html.DisplayName("Rok vzniku")
				</th>
				<th>
					@Html.DisplayName("Počet hodnocení")
				</th>
				<th>
					@Html.DisplayName("Průměrné hodnocení")
				</th>
				<th>
					@Html.DisplayName("Žánr")
				</th>
				<th>
					@Html.DisplayName("Distributor")
				</th>
				<th>
					@Html.DisplayName("Výrobce")
				</th>
				<th>
					@Html.DisplayName("Platforma")
				</th>
				<th></th>
			</tr>

			@foreach (var item in Model)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.Name)
					</td>
					<td>
						@*@Html.DisplayFor(modelItem => item.Picture)*@
						@*<img src="@Url.Content(item.Picture)" />*@
						<img src="@Url.Content(item.Picture)" alt="" />
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Year)

					</td>
					<td>
						@Html.DisplayFor(modelItem => item.RankCount)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.RankOveral)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Genre.Name)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Distributors.Name)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Creators.Name)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Device.Name)
					</td>
					<td>
						@Html.ActionLink("Editovat", "Edit", new { id = item.Id }) |
						@Html.ActionLink("Detail", "Detail", new { id = item.Id }) |
						@Html.ActionLink("Smazat", "Delete", new { id = item.Id })

					</td>
				</tr>
			}

		</table>
	</div>
</div>