@model IEnumerable<GameDatabaseProject.Reviews>

@{
    ViewBag.Title = "UsersReviews";
}





<div class="standard-height">


	<div class="my-reviews-packet">

		<div class="container profile">

			<div class="col-md-10">
				<div class="user-profile">
					<span class="glyphicon glyphicon-user"></span><span class="users-reviews-usrname">@ViewBag.UserName</span>
					<span class="glyphicon glyphicon-heart"> </span><span class="users-reviews-usrpoints"><em> @ViewBag.UserPoints</em></span>
					<span class="glyphicon glyphicon-pencil pencil"> </span><span class="users-reviews-usrreviews"><em> @ViewBag.ReviewNumber </em></span>	
				</div>
			</div>
		</div>

			@foreach (var review in Model)
			{
				<div class="container">

					<div class="review-packet">

						<div class="row">


							<div class="row">
								<div class="col-md-12">
									<div class="review-edit">

										<span class="glyphicon glyphicon-comment"></span>
										<span class="review-edit-href">
											<a href="@Url.Action("Detail", "User", new { id = review.Game_Id })"> @review.Temporary</a>
										</span>




									</div>
								</div>
							</div>

							<div class="row">
								<div class="col-md-10">
									<div class="review-content">
										@review.Content
									</div>
								</div>

								<div class="col-md-2">

									<div class="clearfix">
										<div class="my-review-rank">
											@review.UserRank
										</div>
									</div>


								</div>



							</div>
						</div>
					</div>
				</div>

			}
		</div>
</div>

